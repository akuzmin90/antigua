<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- ТАВЕРНА ОФИЦИАНТКА 01 -->

    <p:place id="pi_1o_tat_waitress_01" animType="EMPTY" imageId="38x85" name="Официантка" minPlayerStair="40"
             meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default" closable="false">
                <p:talks loop="true" onClick="IGNORE">
                    <p:talk text="Занимай свободный столик" delayMs="4000"/>
                    <p:talk text="Отдохни, покушай!" delayMs="9000"/>
                    <p:talk text="Рекомендую барабульку" delayMs="14000"/>
                </p:talks>
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Привет, искатель приключений! Оставь свои дела - присаживайся за столик, сделай
                            заказ! Только помни - бить посуду нельзя. Хотя как, она всё равно деревянная... Но ты же
                            понимаешь?
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Понимаю" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>