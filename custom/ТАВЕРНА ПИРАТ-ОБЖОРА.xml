<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- ТАВЕРНА ПИРАТ-ОБЖОРА -->

    <p:place id="pi_1o_tat_hungry_pirate" animType="EMPTY" imageId="111x121" name="Пират-обжора" minPlayerStair="40"
             meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default" closable="false">
                <p:talks loop="true" onClick="IGNORE">
                    <p:talk text="Порции маленькие" delayMs="3000"/>
                    <p:talk text="Официантка, добавки!" delayMs="9000"/>
                    <p:talk text="Почему не наедаюсь-то..." delayMs="15000"/>
                    <p:talk text="Сочная рулька!" delayMs="20000"/>
                </p:talks>
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Хэй, я бы с радостью с тобой поделился своей трапезой, но мне самому мало! Я не могу
                            наесться уже который день...
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Бедолага" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>