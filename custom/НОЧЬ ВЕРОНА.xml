<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- НОЧЬ ВЕРОНА -->

    <p:place id="pi_1o_Antigua_lc_verona_night" atlasId="pi_1o_PLACES_pi_1o_lumberjack_camp_2" imageId="pi_1o_Antigua_lc_verona_big" name="Виктор"
             minPlayerStair="40" meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default" closable="false">
                <p:talks loop="true" onClick="IGNORE">
                    <p:talk text="Гости? Ночью?" delayMs="1000"/>
                    <p:talk text="*Незаметно съедает пирожок" delayMs="9000"/>
                </p:talks>
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Макаки-мародёры могут пробраться в дом даже ночью! Поэтому, поскорее закрой дверь!
                            Желательно, с той стороны. Ночью в гости не ходят!
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Смотря кто" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>