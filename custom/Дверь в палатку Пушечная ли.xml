<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- Дверь в палатку Пушечная  -->

    <p:place id="pi_1o_it_door_to_tent_cannon_room" animType="EMPTY" imageId="111x138" name="Пушечная" minPlayerStair="40"
             meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default">
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Перед вами - Пушечная. Хотите зайти внутрь? </p:mainText>
                        <p:answers>
                            <p:answer text="Зайти" complete="true">
                                <p:toRoad roadId="pi_1o_it_road_tent_cannon_room"/>
                            </p:answer>
                            <p:answer text="Уйти" complete="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

            <!-- стандартная реплика  -->
            <p:state ifMarker="pi_1o_it_road_tent_cannon_room_closed_forever">
                <p:dialog>
                    <p:replica id="r1_d">
                        <p:mainText>Перед вами - Пушечная. Но вас туда просто не пускают. </p:mainText>
                        <p:answers>
                            <p:answer text="Да и не надо" goto="r1_d" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>