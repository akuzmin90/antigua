                    <p:replica id="r1_d">
                        <p:mainText>Верни Айка, пожалуйста!</p:mainText>
                        <p:answers>
                            <p:answer text="Занимаюсь этим" complete="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
