    <!-- Инструменты если люди дома -->

    <p:place id="pi_1o_Antigua_lc_mc_tools_1" animType="EMPTY" imageId="56x50" name="Инструменты" minPlayerStair="40"  meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default">
                <p:dialog>
                    <p:replica id="r1" atlasId="pi_1o_PLACES_pi_1o_lumberjack_camp" imageId="pi_1o_Antigua_lc_martina"> 
                        <p:mainText>И куда это мы лезем, а? Ничего, что я здесь, например?! Попрошу на выход! </p:mainText>
                        <p:answers>
                            <p:answer text="Я ж вернусь" goto="r1" out="true">
                                <p:toRoad roadId="pi_1o_lumberjack_camp" />
                            </p:answer>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>