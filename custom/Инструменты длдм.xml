    <!-- Инструменты  -->

    <p:place id="pi_1o_Antigua_lc_mc_tools" animType="EMPTY" imageId="56x50" name="Инструменты" minPlayerStair="40"  meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default">
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Тут лежат инструменты - молоток, гвозди, фурнитура, прочее... Такое не перепродать даже, можно ничего не трогать. </p:mainText>
