<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- ДВЕРЬ ГЛУБОКАЯ МОГИЛА -->

    <p:place id="pi_1o_Antigua_pg_deep_grave" atlasId="pi_1o_PLACES_pi_1o_pirates_graveyard" imageId="pi_1o_Antigua_pg_deep_grave" name="Глубокая могила"
             minPlayerStair="40" meetProbability="20" minDistanceBetweenSame="4000" requireGenMode="PI_1O_PIRATES_GRAVEYARD">
             <p:markerCondition condition="pi_1o_quest_missing_recruit_inquisition_02"/>
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- появляется по квесту "Пропавший рекрут инквизиции"  -->
            <p:state id="default">
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Странная пустая глубокая могила... Приглядевшись, вы видите, что она ведёт в
                            какой-то старинный склеп, на большой глубине. Возможно, пропавший рекрут инквизиции мог туда
                            упасть... Хм. Проверим?
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Проверим!" out="true">
                                <p:toRoad roadId="pi_1o_pg_deep_grave_road"/>
                            </p:answer>
                            <p:answer text="Не сейчас" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>