<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- Стул  -->

    <p:place id="pi_1o_Antigua_lc_oh_chair" animType="EMPTY" imageId="77x94" name="Стул" minPlayerStair="40"  meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default">
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Хотите посидеть на стуле?</p:mainText>
                        <p:answers>
                            <p:answer text="Да" goto="r2"/>
                            <p:answer text="Нет" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                    <p:replica id="r2">
                        <p:mainText>Вы посидели на стуле.</p:mainText>
                        <p:answers>
                            <p:answer text="Понимаю" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

    <!-- Стул если люди дома -->

    <p:place id="pi_1o_Antigua_lc_oh_chair_1" animType="EMPTY" imageId="77x94" name="Стул" minPlayerStair="40"  meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default">
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Хотите посидеть на стуле?</p:mainText>
                        <p:answers>
                            <p:answer text="Да" goto="r2"/>
                            <p:answer text="Нет" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                    <p:replica id="r2" atlasId="" imageId="pi_1o_Antigua_lc_olaf">
                        <p:mainText>Это МОЙ стул. Какая наглость! Я такого не потерплю! Выйди, пожалуйста, вон из моего дома!</p:mainText>
                        <p:answer text="Я ж вернусь" goto="r1" out="true">
                            <p:toRoad roadId="pi_1o_lumberjack_camp" />
                        </p:answer>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>


</p:root>