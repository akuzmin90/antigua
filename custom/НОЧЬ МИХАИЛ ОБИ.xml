<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- НОЧЬ МИХАИЛ ОБИ  -->

    <p:place id="pi_1o_Antigua_lc_michael_obi_night" atlasId="pi_1o_PLACES_pi_1o_lumberjack_camp_2" imageId="pi_1o_Antigua_lc_michael_obi_big" name="Михаил Оби"
             minPlayerStair="40" meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default" closable="false">
                <p:talks loop="true" onClick="IGNORE">
                    <p:talk text="*Сопит*" delayMs="3000"/>
                </p:talks>
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>Ночь на дворе, уходи из нашего дома! Не мешай мне спать в объятиях моей милой
                            Касуми!
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Я ж не мешаю" ifGender="female" goto="r1" out="true"/>
                            <p:answer text="Я просто посмотрю" ifGender="male" goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>