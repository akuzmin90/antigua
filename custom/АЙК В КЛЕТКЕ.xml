<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- АЙК В КЛЕТКЕ  -->

    <p:place id="pi_1o_mj_ki_aik_in_cell" atlasId="pi_1o_PLACES_road_4" imageId="pi_1o_mj_ki_aik_in_cell" name="Айк" minPlayerStair="40"
             meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- квест "Детский сАД"  -->
            <p:state id="default" closable="false">
                <p:talks loop="true" onClick="IGNORE">
                    <p:talk text="*Хнык=хнык*" delayMs="6000"/>
                </p:talks>
                <p:dialog>
                    <p:replica id="r1" imageId="{hero}" imageComment="{playerNick}">
                        <p:mainText>Айк, я вытащу тебя! Подожди немного. [Клетку не открыть, пока ведьма жива!]
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Уф..." complete="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

            <!-- квест "Детский сАД", ведьму победили   -->
            <p:state ifMarker="pi_1o_quest_kindergarten_you_fool_04" closable="false">
                <p:dialog>
                    <p:replica id="r1_d">
                        <p:mainText>[Вы открываете клетку с Айком. Видимо, он не до конца понимает, что вы сделали... Он
                            очень рад вас видеть. Почти сразу он убегает в открытую дверь с криком "Я знаю короткую
                            дорогу домой"! Уф...]
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Проверим его дома"
                                      removeMarker="pi_1o_quest_kindergarten_you_fool_04,pi_1o_quest_kindergarten_02"
                                      giveMarker="pi_1o_quest_kindergarten_you_fool_05,pi_1o_quest_kindergarten_03"
                                      complete="true">
                                <p:toRoad roadId="pi_1o_mangrove_jungle"/>
                            </p:answer>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>