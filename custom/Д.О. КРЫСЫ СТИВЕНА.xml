                        <p:toBattle creatureId="pi_1o_Antigua_quest_steven_rats_01" onWinGoTo="win" onLooseGoTo="loose"/>
                    </p:answer>
                    <p:answer text="Я вернусь" goto="loose" out="true"/>
                </p:answers>
            </p:replica>

            <p:replica id="win" closable="false">
                <p:mainText>[Крыса повержена!]
                </p:mainText>
                <p:answers>
                    <p:answer text="Понимаю" removeMarker="pi_1o_quest_bulletin_board_steven_rats_01"
                              giveMarker="pi_1o_quest_bulletin_board_steven_rats_03" complete="true"/>
                </p:answers>
            </p:replica>
        </p:dialog>
