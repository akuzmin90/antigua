<?xml version="1.0" encoding="UTF-8"?>
<p:root xmlns:p="http://www.hitmakers.com/aof/customPlaces"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hitmakers.com/aof/customPlaces ../../xsd/customPlaces.xsd">

    <!-- ОБЕД МАРТИНА  -->

    <p:place id="pi_1o_Antigua_lc_martina_lunch" atlasId="pi_1o_PLACES_pi_1o_lumberjack_camp" imageId="pi_1o_Antigua_lc_martina" name="Мартина"
             minPlayerStair="40" meetProbability="0">
        <p:blockingCreature probability="0"/>
        <p:states>

            <!-- стандартная реплика  -->
            <p:state id="default" closable="false">
                <p:talks loop="true" onClick="IGNORE">
                    <p:talk text="Делиться не будем!" delayMs="8000"/>
                </p:talks>
                <p:dialog>
                    <p:replica id="r1">
                        <p:mainText>На самом деле, я замариновала бородавочника с вечера, а попугая Олаф мне принёс
                            перед самой готовкой! Главное - чтобы горячее и свежее. А то на такой жаре всё быстро
                            портится.
                        </p:mainText>
                        <p:answers>
                            <p:answer text="Вкусно пахнет..." goto="r1" out="true"/>
                        </p:answers>
                    </p:replica>
                </p:dialog>
            </p:state>

        </p:states>
    </p:place>

</p:root>